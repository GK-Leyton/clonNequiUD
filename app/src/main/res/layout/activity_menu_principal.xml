<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".MenuPrincipal">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="#1E001F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnperfil"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#493249"
            app:srcCompat="@drawable/icono_perfil" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="24dp"
            android:text="Hola,"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/txtNombreUsuario"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="230dp"
            android:text="Usuario"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/btnNotificacion"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="20dp"
            android:background="#1E001F"
            app:srcCompat="@drawable/icono_campana" />

        <ImageButton
            android:id="@+id/btnAyudaNequi"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="20dp"
            android:background="#1E001F"
            app:srcCompat="@drawable/icono_pregunta" />

        <ImageButton
            android:id="@+id/btnClaveDinamica"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="20dp"
            android:background="#1E001F"
            app:srcCompat="@drawable/icono_candado" />


        <ImageButton
            android:id="@+id/btnMostrarDepositoBajoMonto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="281dp"
            android:layout_marginTop="79dp"
            android:background="#1E001F"
            app:srcCompat="@drawable/icono_ojo" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="130dp"
            android:foregroundGravity="center"
            android:text="DepÃ³sito Bajo Monto"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtDineroExterno"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="110dp"
            android:layout_marginRight="155dp"
            android:gravity="center"
            android:text="$99999"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtDineroTotal"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="180dp"
            android:gravity="center"
            android:text="Total $99999"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/fondo_forma_triangulo1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <Button
            android:id="@+id/btn_tu_plata"
            android:layout_width="109dp"
            android:layout_height="37dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="180dp"
            android:background="@drawable/button_border"
            android:backgroundTint="#1E001F"
            android:text="Tu plata V"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </FrameLayout>


    <ImageButton
        android:id="@+id/btnFavoritos"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:background="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
        app:srcCompat="@drawable/icono_corazon" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="101dp"
        android:layout_height="25dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="25dp"
        android:text="Tus favoritos"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/btnFavoritos"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />

    <ImageButton
        android:id="@+id/btnEdicion"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="15dp"
        android:background="#ffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
        app:srcCompat="@drawable/icono_edicion" />

    <FrameLayout
        android:id="@+id/layoutFavoritos"
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEdicion">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout13"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/rounded_layout_background"
        android:backgroundTint="#f8f8f8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnPopup"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="5dp"

            android:background="@drawable/rounded_button_background"
            app:srcCompat="@drawable/icono_signo_dollar" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="50dp"
            android:text="Movimientos"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="40dp"
            android:layout_height="27dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:text="Inicio"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/textView12"
            android:layout_width="65dp"
            android:layout_height="27dp"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="50dp"
            android:text="Servicios"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/btnMovimientos"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_gray_button_background"
            app:srcCompat="@drawable/icono_movimientos" />

        <ImageButton
            android:id="@+id/btnInicio"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_gray_button_background"
            app:srcCompat="@drawable/icono_casa" />

        <ImageButton
            android:id="@+id/btnServicios"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_gray_button_background"
            app:srcCompat="@drawable/icono_servicios" />


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
