<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="8dp"
    android:background="#F2F2F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iconoIngresoEgreso"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icono_descarga"
        android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txtCompaniaMovimientoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compañia x"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-30dp"
             />

        <TextView
            android:id="@+id/txtDetallesMovimientoItem"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="0dp"
            android:text="Descripccion del movimiento"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txtValorMovimientoItem"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="-25dp"
            android:gravity="center"

            android:text="Descripción"
            android:textSize="16sp" />
    </LinearLayout>
</FrameLayout>
