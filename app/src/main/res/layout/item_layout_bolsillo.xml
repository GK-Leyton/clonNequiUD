<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/rounded_light_grey"
    android:layout_height="120dp">

    <FrameLayout
        android:id="@+id/frameLayout8"
        android:layout_width="191dp"
        android:layout_height="62dp"
        android:background="@drawable/fondo_para_bolsillos"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageButton
            android:id="@+id/imageButton12"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_white_password_background"
            app:srcCompat="@drawable/icono_signo_peso_negro" />
    </FrameLayout>

    <TextView
        android:id="@+id/txtNombreBolsillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:text="Nombre Bolsillo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout8" />

    <TextView
        android:id="@+id/textView63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="5dp"
        android:text="$ 999.999"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreBolsillo" />
</androidx.constraintlayout.widget.ConstraintLayout>
