<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="720dp"
    android:background="#fff"
    >

    <ImageButton
        android:id="@+id/btnVoler"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icono_flecha_atras_negro" />

    <TextView
        android:id="@+id/textView57"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="19dp"
        android:text="Crea  tu Meta"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVoler" />

    <FrameLayout
        android:id="@+id/frameLayout7"
        android:layout_width="380dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_light_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView57">

        <TextView
            android:id="@+id/txtNombreMetaPorCrear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:hint="Nombre"
            android:textColorHint="#5D4C4C"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/txtCantidadMetaPorCrear"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="$0"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColorHint="#372C2C"
            android:textSize="20sp" />


    </FrameLayout>



    <FrameLayout
        android:id="@+id/frameLayout8"
        android:layout_width="380dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_light_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout7">



        <TextView
            android:id="@+id/txtNombreMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:hint="Nombre de tu meta"
            android:textColorHint="#5D4C4C"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/txtNombreBolsillo"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColorHint="#645151"
            android:textSize="20sp" />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/frameFecha"
        android:layout_width="380dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_light_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout8">



        <TextView
            android:id="@+id/FechaObjetivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:hint="Fecha objetivo de tu meta"
            android:textColorHint="#5D4C4C"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/FechaObjetivoTexto"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColorHint="#645151"
            android:textSize="20sp" />

    </FrameLayout>


    <Button
        android:id="@+id/btnListoCrearMeta"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="#C74E96"
        android:clickable="false"
        android:contextClickable="false"
        android:enabled="false"
        android:text="Listo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>