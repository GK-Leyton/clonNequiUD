<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#1E001F"
    android:outlineAmbientShadowColor="#C19F9F"
    tools:context=".MainActivity"
    >

    <ImageButton
        android:id="@+id/btnClaveDinamica"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="10dp"
        android:background="#1E001F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icono_candado" />

    <ImageButton
        android:id="@+id/btnAyudaNequi"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="63dp"
        android:background="#1E061F"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icono_pregunta" />

    <TextView
        android:id="@+id/tituloNequi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="229dp"
        android:layout_marginEnd="174dp"
        android:fontFamily="sans-serif-black"
        android:text="Nequi"
        android:textColor="@color/white"
        android:textSize="96sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="240dp"
        android:backgroundTint="#d80081"
        android:checkable="false"
        android:clickable="false"
        android:contextClickable="false"
        android:cursorVisible="false"
        android:defaultFocusHighlightEnabled="false"
        android:textColor="#d80081"
        android:textColorHighlight="#d80081"
        android:textColorHint="#d80081"
        android:textColorLink="#d80081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtNumeroTelefono"
        android:layout_width="300dp"
        android:layout_height="54dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="8dp"
        android:background="#49344b"
        android:ems="10"
        android:hint="Número de celular"
        android:inputType="phone"
        android:maxLength="10"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/bntEntrar1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtauxiliar1"
        app:layout_constraintTop_toBottomOf="@+id/tituloNequi1"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/bntEntrar1"
        android:layout_width="360dp"
        android:layout_height="52dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="#d80081"
        android:paddingBottom="10dp"
        android:text="Entra"
        android:textColorLink="#f94bdd"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloNequi1"
        app:layout_constraintVertical_bias="0.824" />

    <TextView
        android:id="@+id/txtauxiliar1"
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="8dp"
        android:background="#49344b"
        android:gravity="center"
        android:text="+57"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bntEntrar1"
        app:layout_constraintEnd_toStartOf="@+id/txtNumeroTelefono"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:text="+57" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="38dp"
        android:layout_height="44dp"
        android:background="#1E001F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bntEntrar1"
        app:srcCompat="@drawable/icono_codigo_qr" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:text="Usa tu QR"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2"
        app:layout_constraintTop_toBottomOf="@+id/bntEntrar1" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="39dp"
        android:layout_height="41dp"
        android:background="#1E001F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/bntEntrar1"
        app:srcCompat="@drawable/icono_telefono" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="Paga en Datáfono"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnRegistro"
        app:layout_constraintTop_toBottomOf="@+id/bntEntrar1" />

    <ImageButton
        android:id="@+id/btnRegistro"
        android:layout_width="47dp"
        android:layout_height="42dp"
        android:background="#1E001F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bntEntrar1"
        app:srcCompat="@drawable/icono_logo" />

    <!-- Reduce o elimina el padding -->

</androidx.constraintlayout.widget.ConstraintLayout>

