<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD">

    <!-- Botón de regresar -->
    <ImageButton
        android:id="@+id/btnAtras_tus_metas"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icono_flecha_atras_negro" />

    <!-- Título -->
    <TextView
        android:id="@+id/textView62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:text="Tus Metas"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAtras_tus_metas" />

    <!-- RecyclerView para los ítems -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewItemsMetas"
        android:layout_width="match_parent"
        android:layout_height="572dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView62"
        app:layout_constraintVertical_bias="1.0" />


    <!-- Botón para crear una nueva meta -->
    <FrameLayout
        android:id="@+id/frameCrearMeta"
        android:layout_width="190dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/rounded_light_grey"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewItemsMetas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnCrearMeta"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:background="#F2F2F2"
            app:srcCompat="@drawable/icono_suma" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
